<IfModule mod_rewrite.c>
    RewriteEngine On
    RewriteBase /lapak-bangsawan/

    Options -MultiViews

    # Skip real files and folders
    RewriteCond %{REQUEST_FILENAME} -f [OR]
    RewriteCond %{REQUEST_FILENAME} -d
    RewriteRule ^ - [L]

    # 1. Handle root clean URLs mapping to public/
    # Example: /checkout -> public/checkout.php
    RewriteCond %{DOCUMENT_ROOT}/lapak-bangsawan/public/$1.php -f
    RewriteRule ^([^/]+)$ public/$1.php [L,QSA]

    # 2. Handle sub-path clean URLs inside public/
    # Example: /public/checkout -> public/checkout.php
    RewriteCond %{REQUEST_FILENAME}.php -f
    RewriteRule ^(.*)$ $1.php [L,QSA]
</IfModule>
