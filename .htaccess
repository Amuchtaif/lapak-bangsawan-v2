    RewriteEngine On
    
    # 1. Base Path Configuration
    # OPTIONAL: If your hosting requires it, uncomment and set the correct path
    # Example for root: RewriteBase /
    # Example for subfolder: RewriteBase /folder-name/
    # RewriteBase /

    Options -MultiViews

    # Skip real files and folders
    RewriteCond %{REQUEST_FILENAME} -f [OR]
    RewriteCond %{REQUEST_FILENAME} -d
    RewriteRule ^ - [L]

    # 2. Handle generic extensions (remove .php)
    # Allows access to files like about.php via /about
    RewriteCond %{REQUEST_FILENAME}.php -f
    RewriteRule ^(.*)$ $1.php [L,QSA]

    # 3. Main Routing to public/ folder
    # Maps /home to public/home.php, /checkout to public/checkout.php
    # This rule fires if the request is NOT a generic file in the root
    RewriteRule ^([^/]+)/?$ public/$1.php [L,QSA]
